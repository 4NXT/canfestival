CC = SUB_CC
OPT_CFLAGS = -O2
CFLAGS = SUB_OPT_CFLAGS
PROG_CFLAGS = SUB_PROG_CFLAGS
PREFIX = SUB_PREFIX
TARGET = SUB_TARGET
TIMERS_DRIVER = SUB_TIMERS_DRIVER
ENABLE_DLL_DRIVERS=SUB_ENABLE_DLL_DRIVERS
OBJS = $(CAN_DRIVER).o

TARGET_DIR=../../bin/
INCLUDES = -I../../include -I../../include/$(TARGET) -I../../include/$(CAN_DRIVER) $(DRIVER_INCLUDE)

# define target specific environment
ifeq ($(TARGET),unix)
DLL_TYPE=so
endif

ifeq ($(OS),win32)
DLL_TYPE=dll
endif

ifeq ($(ENABLE_DLL_DRIVERS),1)
CFLAGS += -fPIC
DRIVER = libcanfestival_$(CAN_DRIVER).$(DLL_TYPE)
else
DRIVER = $(OBJS)
endif

TARGET_SOFILES = $(PREFIX)/lib/$(DRIVER)

all: driver

driver: $(PRE_COMPILE_TARGETS) $(TARGET_DIR)$(DRIVER)

%.o: %.c
	$(CC) $(CFLAGS) $(PROG_CFLAGS) ${PROGDEFINES} $(INCLUDES) -o $@ -c $<

$(TARGET_DIR)$(DRIVER): $(OBJS)
	$(CC) -shared -Wl,-soname,$(DRIVER) $(CAN_DLL_CFLAGS) -o $@ $<

install: $(TARGET_DIR)$(DRIVER)
	mkdir -p $(PREFIX)/lib/
	cp $< $(PREFIX)/lib/
	
uninstall:
	rm -f $(TARGET_SOFILES)

ifdef driverCleanup
clean: driverCleanup
else
clean:
endif
	rm -f $(OBJS) $(TARGET_DIR)$(DRIVER)

mrproper: clean
